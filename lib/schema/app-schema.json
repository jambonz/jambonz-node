{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["string", "number", "boolean"]
    },
    "required": {
      "type": "boolean"
    },
    "default": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" }
      ]
    },
    "enum": {
      "type": "array"
    },
    "obscure": {
      "type": "boolean"
    }
  },
  "required": ["type", "description"]
} 